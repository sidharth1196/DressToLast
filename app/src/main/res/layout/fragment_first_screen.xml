<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.screens.FirstScreen"
    android:id="@+id/firstfrag">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="317dp"
        android:layout_height="36dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto"
        android:text="Create a review"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:id="@+id/textView3"
    android:layout_width="328dp"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="52dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="63dp"
    android:fontFamily="@font/roboto"
    android:text="Review your garments or accessories and give feedback on their durability, which we transform into durability score by brand."
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="14sp"
    app:layout_constraintBottom_toTopOf="@+id/button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
    android:id="@+id/button"
    android:layout_width="160dp"
    android:layout_height="52dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="53dp"
    android:layout_marginEnd="100dp"
    android:layout_marginBottom="165dp"
    android:fontFamily="@font/roboto"
    android:text="Next"
    android:textAlignment="center"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="328dp"
        android:layout_height="219dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ob1" />

</androidx.constraintlayout.widget.ConstraintLayout>